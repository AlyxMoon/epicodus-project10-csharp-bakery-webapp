@using System.Collections.Generic
@using Bakery.Models
@model List<Order>

<table>
  <thead>
    <tr>
      <th></th>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    @if (Model.Count == 0)
    {
      <tr><td colspan="4">No Orders Yet</td></tr>
    }

    @foreach (Order order in Model)
    {
      <tr>
        <td>
          <a class="btn" href="/store/orders/@order.Id">
            See Details
          </a>
          <a class="btn" href="/store/orders/@order.Id/delete">
            Delete
          </a>
        </td>
        <td>@order.Id</td>
        <td>@order.Title</td>
        <td>@order.Description</td>
      </tr>
    }
  </tbody>
</table>